{
  "private": true,
  "scripts": {
    "watch-css": "postcss ./static/css/app.css -o ./static/dev/app.css",
    "watch-js": "esbuild ./static/js/app.js --bundle --outfile=./static/dev/app.js",
    "build-css": "NODE_ENV=production postcss ./static/css/app.css -o ./static/dist/app.css",
    "build-js": "NODE_ENV=production esbuild ./static/js/app.js --bundle --minify --outfile=./static/dist/app.js"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.2.1",
    "autoprefixer": "^10.0.1",
    "cssnano": "^4.1.10",
    "esbuild": "^0.8.33",
    "postcss": "^8.1.7",
    "postcss-cli": "^8.2.0",
    "tailwindcss": "^2.0.1"
  },
  "dependencies": {
    "@hotwired/turbo": "^7.0.0-beta.3",
    "reconnecting-websocket": "^4.4.0",
    "stimulus": "^2.0.0"
  }
}
