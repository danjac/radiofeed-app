{
  "private": true,
  "scripts": {
    "dev": "concurrently \"yarn:watch-css\" \"yarn:watch-js\"",
    "build": "concurrently \"yarn:build-css\" \"yarn:build-js\"",
    "watch-css": "postcss ./static/css/app.css -o ./static/dist/app.css -w --verbose",
    "watch-js": "webpack-cli --watch --mode=development",
    "build-css": "NODE_ENV=production postcss ./static/css/app.css -o ./static/dist/app.css",
    "build-js": "NODE_ENV=production webpack-cli"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@tailwindcss/forms": "^0.2.1",
    "autoprefixer": "^10.0.1",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "concurrently": "^5.3.0",
    "cssnano": "^4.1.10",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-prettier": "^3.1.3",
    "node-forge": "^0.10.0",
    "postcss": "^8.1.7",
    "postcss-cli": "^8.2.0",
    "prettier": "^2.0.5",
    "tailwindcss": "^2.0.1",
    "webpack": "^5.3.2",
    "webpack-cli": "^4.1.0"
  },
  "dependencies": {
    "axios": "^0.21.0",
    "stimulus": "^2.0.0",
    "stimulus-use": "^0.18.1",
    "turbolinks": "^5.2.0"
  }
}
