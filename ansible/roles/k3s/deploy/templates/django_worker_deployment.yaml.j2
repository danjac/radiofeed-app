apiVersion: apps/v1
kind: Deployment
metadata:
  name: django-worker
spec:
  replicas: 1
  selector:
    matchLabels:
      app: django-worker
  strategy:
    type: RollingUpdate
    rollingUpdate:
        maxSurge: 0  # No extra pods created during update
        maxUnavailable: 1  # Only one pod can be replaced at a time
  template:
    metadata:
      labels:
        app: django-worker
    spec:
      nodeSelector:
        role: jobrunner
      containers:
        - name: django
          image: {{ image }}
          resources:
            requests:
                memory: "{{ mem_request }}"
                cpu: "{{ cpu_request }}"
            limits:
                memory: "{{ mem_limit }}"
                cpu: "{{ cpu_limit }}"
          command: ["/bin/sh", "-c"]
          args: ["./worker.sh"]
          envFrom:
            - configMapRef:
                name: configmap
            - secretRef:
                name: secrets
